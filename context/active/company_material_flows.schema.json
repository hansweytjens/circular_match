{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/company_material_flows.schema.json",
  "title": "Company material flows (material-first outputs)",
  "type": "object",
  "additionalProperties": false,
  "required": ["company_profile", "products_and_services", "material_outputs"],
  "properties": {
    "company_profile": {
      "type": "object",
      "additionalProperties": true,
      "required": ["company_name", "street", "postal_code", "city", "country", "website", "coordinates"],
      "properties": {
        "company_name": { "type": "string" },
        "street": { "type": "string" },
        "postal_code": { "type": "string" },
        "city": { "type": "string" },
        "country": { "type": "string" },
        "website": { "type": "string" },
        "coordinates": {
          "type": "object",
          "additionalProperties": false,
          "required": ["latitude", "longitude"],
          "properties": {
            "latitude": { "type": "number", "minimum": -90, "maximum": 90 },
            "longitude": { "type": "number", "minimum": -180, "maximum": 180 }
          }
        }
      }
    },
    "products_and_services": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": true,
        "required": ["name", "category", "volume_estimate"],
        "properties": {
          "name": { "type": "string" },
          "category": { "type": "string", "enum": ["product", "service"] },
          "volume_estimate": { "type": "string", "enum": ["large", "medium", "low"] }
        }
      }
    },
    "material_outputs": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "required": ["rank", "material", "output_kind", "name", "form", "treatment", "grade", "condition"],
        "properties": {
          "rank": { "type": "integer", "minimum": 1 },
          "material": { "type": "string" },
          "produced_by_products": {
            "type": "array",
            "items": { "type": "string" }
          },
          "output_kind": { "type": "string" },
          "name": { "type": "string" },
          "form": { "type": "string" },
          "treatment": { "type": "string" },
          "grade": { "type": "string" },
          "condition": { "type": "string" },
          "size_dimensions": { "type": "string" },
          "volume_estimate": { "type": "string", "enum": ["large", "medium", "low"] },
          "notes": { "type": "string" },
          "output_type": { "type": "string" }
        }
      }
    }
  }
}
